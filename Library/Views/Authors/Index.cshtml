@{
  Layout = "_Layout";
}

@using Library.Models;
@model List<Library.Models.Author>;

<h1>Authors</h1>

@if (@Model.Count == 0)
{
  <h3>No authors have been added yet!</h3>
} 

@foreach (Author author in Model)
{
  <li>@Html.ActionLink($"{author.FullName}", "Details", new { id = author.AuthorId })</li>
}
